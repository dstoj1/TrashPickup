@model List<TrashPickup.Models.Address>
@{
    ViewBag.Title = "Pick Ups";

 <h2>@ViewBag.Title.</h2>
 @Html.ActionLink("Add Pick Up", "AddAddress", "Customer")
    @if(Model.Count > 0)
    {
        //open table
        @foreach(TrashPickup.Models.Address address in Model)
        {
            <tr>
                <td>
                    @address.AddressLine @address.City, @address.State @address.Zip Pick up: @address.Day
                    @Html.ActionLink("Remove Address", "RemoveAddress", "Customer", new {AddressId = address.ID}, null)
                    @Html.ActionLink("Change Pick Up Day", "ChangeDay", "Customer", new { AddressId = address.ID }, null)
                </td>
            </tr>
        }
        //close table
    }
    else
    {
        <p> No address found,  please enter an address</p>
    }

